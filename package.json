{
  "name": "streaming-markdown-parser",
  "version": "1.0.0",
  "description": "Task: Make a streaming Markdown parser.",
  "main": "index.js",
  "scripts": {
    "dev": "bunx tsc ./src/MarkdownParser.ts --watch --outDir ./public",
    "start": "vite public/ --port 8080",
    "build": "bunx tsc; npm run build:cp-public",
    "build:cp-public": "cp ./public/** ./dist",
    "type": "bunx tsc --noEmit",
    "clean": "rimraf public/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anysphere/streaming-markdown-parser.git"
  },
  "author": "Hiro <laciferin@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/anysphere/streaming-markdown-parser/issues"
  },
  "homepage": "https://github.com/anysphere/streaming-markdown-parser#readme",
  "devDependencies": {
    "rimraf": "^6.0.1",
    "typescript": "^5.0.4"
  }
}